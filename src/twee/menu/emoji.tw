:: Tweeomoji [script]
// Load Twemoji script
const handleTwemoji = () => {
  window.twemoji && twemoji.parse(story.$el[0], {
    folder: 'svg',
    ext: '.svg'
  });
}

jQuery.getScript("https://twemoji.maxcdn.com/v/latest/twemoji.min.js", handleTwemoji);

  $(window).on('sm.passage.shown', handleTwemoji);

:: Twemoji style [stylesheet]
.emoji {
  object-fit: contain;
  width: 1.2em;
  height: 1.2em;
  vertical-align: -0.1em;
  text-shadow: black 1px 1px;
}